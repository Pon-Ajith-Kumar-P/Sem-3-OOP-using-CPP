#include<iostream>
using namespace std;
class Complex
{
    public:
        double real,imag;
        Complex(double i,double j)
        {
            real=i;
            imag=j;
        }
        Complex operator + (Complex obj)
        {
            Complex result(0,0);
            result.real=real+obj.real;
            result.imag=imag+obj.imag;
            return result;
        }
        Complex operator - (Complex obj)
        {
            Complex result(0,0);
            result.real=real-obj.real;
            result.imag=imag-obj.imag;
            return result;
        }
        Complex operator * (Complex obj)
        {
            Complex result(0,0);
            result.real=real * obj.real - imag * obj.imag;
            result.imag=real * obj.imag + imag * obj.real;
            return result;
        }
};
int main()
{
    Complex c1(3,2);
    Complex c2(2,3);
    Complex c3=c1+c2;
    Complex c4=c1-c2;
    Complex c5=c1*c2;
    cout<<"\nSum        = "<<c3.real<<" + ("<<c3.imag<<"i)";
    cout<<"\nDifference = "<<c4.real<<" + ("<<c4.imag<<"i)";
    cout<<"\nProduct    = "<<c5.real<<" + ("<<c5.imag<<"i)";
    return 0;
}
