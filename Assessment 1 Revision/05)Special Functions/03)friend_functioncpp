#include<iostream>
using namespace std;
class Box {
    private:
        int len, bre, hei;

    public:
        // Constructor to initialize dimensions
        Box(int l, int b, int h) 
        {
            len = l;
            bre = b;
            hei = h;
        }

        // Friend function declaration
        friend void dimension(Box);
};

// Friend function definition
void dimension(Box box) 
{
    cout << "\nDimensions of the Box\n";
    cout << "\nLength = " << box.len;
    cout << "\nBreadth = " << box.bre;
    cout << "\nHeight = " << box.hei;
}

int main() 
{
    Box box(10, 15, 25); // Create a Box object

    // Call the friend function and pass the box object
    dimension(box);
    
    return 0;
}
